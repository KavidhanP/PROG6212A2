@using PROGA22025.Models
@model List<Lecturers>

<div class="container mt-5">
    <h2>Select Lecturer</h2>
    <p>Choose a lecturer to view their claims dashboard</p>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            No lecturers found. <a asp-action="Create" class="btn btn-primary">Create New Lecturer</a>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var lecturer in Model)
            {
                <a asp-action="Index" asp-route-lecturerId="@lecturer.LecturerId"
                   class="list-group-item list-group-item-action">
                    <h5>@lecturer.Name</h5>
                    <small>@lecturer.Email</small>
                </a>
            }
        </div>

        <div class="mt-3">
            <a asp-action="Create" class="btn btn-secondary">Create New Lecturer</a>
        </div>
    }
</div>