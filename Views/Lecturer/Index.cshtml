<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    --
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewBag.LecturerName - Claims Dashboard</h2>
        <a asp-action="SubmitClaim" asp-route-lecturerId="@ViewBag.LecturerId"
           class="btn btn-success btn-lg">
             Submit New Claim
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <h4>No Claims Yet</h4>
            <p>You haven't submitted any claims. Click the button above to submit your first claim!</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">My Claims</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Submitted</th>
                            <th>Documents</th>
                            <th>Status</th>
                            <th>Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.OrderByDescending(c => c.SubmittedDate))
                        {
                            <tr>
                                <td><strong>#@claim.ClaimId</strong></td>
                                <td>@claim.HoursWorked hrs</td>
                                <td>R @claim.HourlyRate</td>
                                <td><strong>R @claim.Total</strong></td>
                                <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (claim.SupportingDocuments.Any())
                                    {
                                        <span class="badge bg-secondary">@claim.SupportingDocuments.Count file(s)</span>
                                        @foreach (var doc in claim.SupportingDocuments)
                                        {
                                            <div>
                                                <a asp-action="DownloadDocument" asp-route-documentId="@doc.DocumentId"
                                                   class="btn btn-sm btn-outline-primary mt-1">
                                                     @doc.OriginalFileName
                                                </a>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td>
                                    @if (claim.Status == "Approved")
                                    {
                                        <span class="badge bg-success"> Approved</span>
                                    }
                                    else if (claim.Status.Contains("Rejected"))
                                    {
                                        <span class="badge bg-danger"> Rejected</span>
                                    }
                                    else if (claim.Status == "Pending Manager Review")
                                    {
                                        <span class="badge bg-warning text-dark"> Pending Manager</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"> Pending</span>
                                    }
                                </td>
                                <td style="width: 200px;">
                                    @{
                                        var progress = 25;
                                        var progressColor = "bg-secondary";
                                        var progressText = "Submitted";

                                        if (claim.CoordinatorApproved == false || claim.ManagerApproved == false)
                                        {
                                            progress = 100;
                                            progressColor = "bg-danger";
                                            progressText = "Rejected";
                                        }
                                        else if (claim.ManagerApproved == true)
                                        {
                                            progress = 100;
                                            progressColor = "bg-success";
                                            progressText = "Completed";
                                        }
                                        else if (claim.CoordinatorApproved == true)
                                        {
                                            progress = 66;
                                            progressColor = "bg-info";
                                            progressText = "With Manager";
                                        }
                                        else if (claim.CoordinatorApproved == null)
                                        {
                                            progress = 33;
                                            progressColor = "bg-warning";
                                            progressText = "With Coordinator";
                                        }
                                    }

                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar @progressColor"
                                             role="progressbar"
                                             style="width: @progress%"
                                             aria-valuenow="@progress"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            <small><strong>@progressText</strong></small>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary"> Back to Lecturer Selection</a>
    </div>
</div>